{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .FDD/scripts/quality-check.sh \"$CLAUDE_TOOL_USE_FILE_PATH\"",
            "timeout": 120000
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(bash .FDD/scripts/*)",
      "Bash(python3 *)",
      "Bash(go *)",
      "Bash(cargo *)",
      "Bash(git *)",
      "Read(.FDD/**)",
      "Write(.FDD/**)",
      "Edit(.FDD/**)"
    ]
  }
}
